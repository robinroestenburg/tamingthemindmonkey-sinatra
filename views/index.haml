.columns
  .two-columns
    .column

      %h2.column-heading Most recent posts

      - if @posts.any?
        %ul.bullet-list

          %li
            %span.title
              %strong Title
            %span.posted_at
              %strong Posted at
            %span.tags
              %strong Tags

            - @posts.each do |post|
              %li
                %span.title
                  %a{:href => "/#{post.permalink}"}= post.title
                %span.posted_at
                  = post.published_at.strftime('%B %d, %Y')
                %span.tags
                  - post.tags.each_with_index do |tag, index|
                    - if post.tags.length - 1 == index
                      %a{:href => "/tag/#{tag}"}>= tag
                    - else
                      %a{:href => "/tag/#{tag}"}>= tag
                      ,&nbsp;

    .column.last
      %h2.column-heading Most recent posts.
      %img{:class => "column-image", :src => "images/icons/settings.png", :alt => "settings"}
